<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="org.jbtc.gshop.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_categorias"
            app:destination="@id/nav_categorias" />
        <action
            android:id="@+id/action_nav_home_to_nav_productos"
            app:destination="@id/nav_productos" />
        <action
            android:id="@+id/action_nav_home_to_nav_pedidos"
            app:destination="@id/nav_pedidos" />
    </fragment>

    <fragment
        android:id="@+id/nav_categorias"
        android:name="org.jbtc.gshop.ui.categorias.CategoriasFragment"
        android:label="@string/menu_categorias"
        tools:layout="@layout/fragment_categorias" >
        <action
            android:id="@+id/action_nav_categorias_to_categoriaEditFragment"
            app:destination="@id/categoriaEditFragment" />
        <action
            android:id="@+id/action_nav_categorias_to_categoriaAddFragment"
            app:destination="@id/categoriaAddFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_productos"
        android:name="org.jbtc.gshop.ui.productos.ProductosFragment"
        android:label="@string/menu_productos"
        tools:layout="@layout/fragment_productos" >
        <action
            android:id="@+id/action_nav_productos_to_productoEditFragment"
            app:destination="@id/productoEditFragment" />
        <action
            android:id="@+id/action_nav_productos_to_productoAddFragment"
            app:destination="@id/productoAddFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_pedidos"
        android:name="org.jbtc.gshop.ui.pedidos.PedidosFragment"
        android:label="@string/menu_pedidos"
        tools:layout="@layout/fragment_pedidos" >
        <action
            android:id="@+id/action_nav_pedidos_to_nav_clientes"
            app:destination="@id/nav_clientes" />
    </fragment>
    <fragment
        android:id="@+id/productoEditFragment"
        android:name="org.jbtc.gshop.ui.productos.producto.ProductoEditFragment"
        android:label="Editar Producto" />
    <fragment
        android:id="@+id/categoriaEditFragment"
        android:name="org.jbtc.gshop.ui.categorias.categoria.CategoriaEditFragment"
        android:label="Editar Categoria" />

    <fragment
        android:id="@+id/nav_clientes"
        android:name="org.jbtc.gshop.ui.clientes.ClientesFragment"
        android:label="Clientes" />

    <fragment
        android:id="@+id/productoAddFragment"
        android:name="org.jbtc.gshop.ui.productos.producto.ProductoAddFragment"
        android:label="Agregar Producto" />

    <fragment
        android:id="@+id/categoriaAddFragment"
        android:name="org.jbtc.gshop.ui.categorias.categoria.CategoriaAddFragment"
        android:label="Agregar Categoria" />


</navigation>