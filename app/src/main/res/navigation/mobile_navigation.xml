<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="org.jbtc.gshop.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_categorias"
        android:name="org.jbtc.gshop.ui.categorias.CategoriasFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_categorias" >
        <action
            android:id="@+id/action_nav_categorias_to_categoriaEditFragment"
            app:destination="@id/categoriaEditFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_productos"
        android:name="org.jbtc.gshop.ui.productos.ProductosFragment"
        android:label="@string/menu_productos"
        tools:layout="@layout/fragment_productos" >
        <action
            android:id="@+id/action_nav_productos_to_productoEditFragment"
            app:destination="@id/productoEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_pedidos"
        android:name="org.jbtc.gshop.ui.pedidos.PedidosFragment"
        android:label="@string/menu_pedidos"
        tools:layout="@layout/fragment_pedidos" />
    <fragment
        android:id="@+id/productoEditFragment"
        android:name="org.jbtc.gshop.ui.productos.producto.ProductoEditFragment"
        android:label="ProductoEditFragment" />
    <fragment
        android:id="@+id/categoriaEditFragment"
        android:name="org.jbtc.gshop.ui.categorias.categoria.CategoriaEditFragment"
        android:label="CategoriaEditFragment" />

    <fragment
        android:id="@+id/nav_clientes"
        android:name="org.jbtc.gshop.ui.clientes.ClientesFragment"
        android:label="Clientes" />


</navigation>