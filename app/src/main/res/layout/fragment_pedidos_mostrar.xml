<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.pedidos.pedido.PedidosMostrarFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ped_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <EditText
        android:id="@+id/et_codigo_pedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_codigo_pedidos"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/et_fecha_pedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_precio_pedidos"
        app:layout_constraintVertical_bias="0.029"
        tools:layout_editor_absoluteX="29dp" />

    <TextView
        android:id="@+id/tv_pedido_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_pedido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_precio_pedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Fecha del pedido:"
        app:layout_constraintTop_toBottomOf="@+id/et_codigo_pedido"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_codigo_pedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CÃ³digo del Pedido:"
        app:layout_constraintTop_toBottomOf="@+id/tv_pedido_edit"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>